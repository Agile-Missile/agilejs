{
  "name": "@agilejs/package",
  "version": "1.0.1",
  "license": "MIT",
  "type": "module",
  "exports": {
    ".": {
      "import": "./index.js",
      "types": "./dist/index.d.ts"
    },
    "./package.json": "./package.json"
  },
  "main": "./index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "./bin/",
    "./dist/",
    "./index.js"
  ],
  "scripts": {
    "dev": "yarn node --import=@hyperse/ts-node-paths/register tests/test.ts",
    "build": "rimraf dist && tsc -p ./tsconfig.build.json",
    "?build-release": "When https://github.com/atlassian/changesets/issues/432 has a solution we can remove this trick",
    "build-release": "yarn build && rimraf ./_release && yarn pack && mkdir ./_release && tar zxvf ./package.tgz --directory ./_release && rm ./package.tgz",
    "clean": "rimraf --no-glob ./dist ./coverage ./__data__ ./config/__data__ ./_release ./tsconfig.tsbuildinfo",
    "lint": "eslint . --cache --cache-location ../../.cache/eslint/forge.eslintcache",
    "test": "run-s test-unit",
    "test-task": "vitest run",
    "test-unit": "vitest run --passWithNoTests",
    "test-watch": "vitest watch --ui",
    "fix-all-files": "eslint . --fix",
    "typecheck": "tsc --project ./tsconfig.json --noEmit"
  },
  "dependencies": {
    "@agilejs/typing-beautify": "workspace:*",
    "pkg-dir": "^9.0.0",
    "resolve-dir": "^1.0.1",
    "type-fest": "^5.1.0"
  },
  "devDependencies": {
    "@hyperse/eslint-config-hyperse": "^1.4.8",
    "@types/node": "^24.9.2",
    "@types/resolve-dir": "^0.0.0",
    "@vitest/coverage-istanbul": "^4.0.5",
    "@vitest/ui": "^4.0.5",
    "eslint": "^9.38.0",
    "minimist": "^1.2.8",
    "npm-run-all": "^4.1.5",
    "rimraf": "^6.0.1",
    "typescript": "^5.9.3",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^4.0.5"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "publishConfig": {
    "access": "public",
    "directory": "_release/package"
  }
}
